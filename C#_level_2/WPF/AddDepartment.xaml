<Window x:Class="Homework.AddDepartment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Homework"
        mc:Ignorable="d"
        Title="Добавить департамент" Height="100" Width="300" ResizeMode="NoResize" >
    <Grid>
        <TextBox x:Name="tboxNewNameDepartment" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="280" Margin="10,17,0,0"/>
        <Button x:Name="btnOk" Content="Добавить" HorizontalAlignment="Left" Margin="95,45,0,0" VerticalAlignment="Top" Width="75" Click="btnOk_Click"/>
        <Button x:Name="btnCancel" Content="Отмена" HorizontalAlignment="Left" Margin="195,45,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.467,0.5"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,4,0,0" TextWrapping="Wrap" Text="Название департамента" VerticalAlignment="Top"/>

    </Grid>
</Window>
